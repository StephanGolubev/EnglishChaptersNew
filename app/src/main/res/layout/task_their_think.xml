<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/back_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingStart="10dp"
        android:paddingTop="2sp"
        android:paddingBottom="2sp">

        <RelativeLayout
            android:id="@+id/recording_play_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/task_think_left"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/repeat_list"
                android:layout_width="59dp"
                android:layout_height="16dp"
                android:layout_gravity="right|center_horizontal|center_vertical"
                android:layout_marginLeft="45sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="45sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/dots"
                android:textSize="25sp"
                android:visibility="visible" />

            <com.eyalbira.loadingdots.LoadingDots
                android:id="@+id/progressBar"
                android:layout_width="61dp"
                android:layout_height="21dp"
                android:layout_gravity="right|center_horizontal|center_vertical"
                android:layout_marginLeft="44.5sp"
                android:layout_marginTop="1sp"
                android:layout_marginRight="45sp"

                android:layout_marginBottom="10sp"

                app:LoadingDots_auto_play="true"
                app:LoadingDots_dots_color="#7a7979"
                app:LoadingDots_dots_count="3"
                app:LoadingDots_dots_size="16dp"

                app:LoadingDots_dots_space="6dp"
                app:LoadingDots_jump_duration="200"

                app:LoadingDots_jump_height="4dp"
                app:LoadingDots_loop_duration="800"
                app:LoadingDots_loop_start_delay="100" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
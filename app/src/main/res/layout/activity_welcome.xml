<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@color/White"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/cercly" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="Привет, друг!"
        android:textColor="@color/EvgenyGrey"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/start_app_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="459dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttons"
        android:text="Войти"
        android:textColor="@color/White"
        android:textSize="22sp"
        android:fontFamily="sans-serif-light">

    </Button>


    <Button
        android:id="@+id/register_app_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="530dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttons"
        android:text="Зарегистрируйся прямо сейчас"
        android:textColor="@color/White"
        android:textSize="17sp"
        android:fontFamily="sans-serif-light"
/>
</RelativeLayout>